<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SlidingTilesSetUpActivity">

    <Spinner
        android:id="@+id/ChooseBoardSpinner"
        android:layout_width="272dp"
        android:layout_height="62dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="74dp"
        android:layout_marginTop="214dp" />

    <TextView
        android:id="@+id/SetupText"
        android:layout_width="211dp"
        android:layout_height="52dp"
        android:layout_alignStart="@+id/ChooseUndoSpinner"
        android:layout_alignParentTop="true"
        android:layout_marginStart="19dp"
        android:layout_marginTop="60dp"
        android:text="Game Setup"
        android:textAlignment="center"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/ChooseSizeView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/ChooseBoardSpinner"
        android:layout_alignParentTop="true"
        android:layout_marginStart="1dp"
        android:layout_marginTop="173dp"
        android:text="Choose the size of the board."
        android:textSize="18sp" />

    <TextView
        android:id="@+id/ChooseUndoView"
        android:layout_width="266dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/ChooseBoardSpinner"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="1dp"
        android:layout_marginBottom="289dp"
        android:text="Choose the maximum number of moves you can undo."
        android:textSize="18sp" />

    <Spinner
        android:id="@+id/ChooseUndoSpinner"
        android:layout_width="270dp"
        android:layout_height="59dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="71dp"
        android:layout_marginBottom="207dp" />

    <Button
        android:id="@+id/PlayButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="164dp"
        android:layout_marginTop="510dp"
        android:text="Play" />

</RelativeLayout>